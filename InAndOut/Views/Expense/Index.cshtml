@model IEnumerable<InAndOut.Models.Expense>

<div class="container p-2">
    <div class="row pt-4">
        <div class="=" col-6">
            <h2 class="text-primary">Expense list</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Expense" asp-action="CreateExpense" class="btn bg-primary">Create New Expense</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" stryle="width:100%">
            <thead>
                <tr>
                    <th>
                        Expense name
                    </th>
                    <th>
                        Cost
                    </th>
                    <th>
                        Changes
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model)
                {
                <tr>
                    <td width="35%">@expense.ExpenseName</td>
                    <td width="35%">@expense.Cost</td>
                    <td width="30%">
                        <div class="w-100 btn-group"role-"group">
                            <a asp-controller="Expense" asp-action="UpdateExpense" asp-route-Id="@expense.Id" class="btn btn-primary mx-1">Update </a>
                            <a asp-controller="Expense" asp-action="DeleteExpense"asp-route-Id="@expense.Id" class="btn btn-danger mx-1">Delete </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>

    }
    else
    {
        <p>No expenses created yet</p>
    }


</div> 